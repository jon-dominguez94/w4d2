<form action="index.html" method="post">
  <label>Name
    <input type="text" name="cat[name]" value="">
  </label>
  <br>
  <label>Birth Date
    <input type="date" name="cat[birth_date]" value="">
  </label>
  <br>
  <label>Sex
    <input type="radio" name="cat[sex]" value="M">M
    <input type="radio" name="cat[sex]" value="F">F
  </label>
  <br>
  <label>Color
    <select name="cat[color]">
      <option disabled selected value="">--Select Color--</option>
      <% Cat.colors.each do |color| %>
      <option value=" <%= color %> "> <%= color.capitalize %> </option>
      <% end %>
    </select>
  </label>
  <br>
  <label>Description
    <textarea name="cat[description]" value=""></textarea>
  </label>
  <br>
  <input type="submit" name="" value="Create cat">
</form>
